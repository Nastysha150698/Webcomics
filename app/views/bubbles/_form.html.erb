<%= form_for :bubble, url: comic_bubbles_path do |form| %>
  <% if @bubble.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bubble.errors.count, "error") %> prohibited this artwork from being saved:</h2>

      <ul>
      <% @bubble.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%#= form.label :text %>
    <%#= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :figure %>
  </div>

  <div class="field">
    <%= form.label :x %>
    <%= form.number_field :x %>
  </div>

  <div class="field">
    <%= form.label :y %>
    <%= form.number_field :y %>
  </div>

  <div class="field">
    <%= form.label :rotate %>
    <%= form.number_field :rotate %>
  </div>

  <div class="field">
    <%= form.label :width %>
    <%= form.number_field :width %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>

  <div class="field">
    <%#= form.label :border_width %>
    <%#= form.number_field :border_width %>
  </div>

  <div class="field">
    <%#= form.label :border_color %>
    <%#= form.text_field :border_color %>
  </div>

  <div class="field">
    <%#= form.label :background_color %>
    <%#= form.text_field :background_color %>
  </div>

  <div class="field">
    <%#= form.label :border_radius %>
    <%#= form.number_field :border_radius %>
  </div>

  <div class="field">
    <%= form.label :opacity %>
    <%= form.number_field :opacity %>
  </div>

  <div class="field">
    <%= form.label :layer %>
    <%= form.text_field :z_index %>
  </div>

  <div class="field">
    <%= form.label :shape_id %>
    <%#= form.text_field :shape_id %>
    <%= select("bubble", "shape_id", Shape.all.collect { |a| [a.title, a.id] }, { include_blank: true }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
