<p id="notice"><%= notice %></p>

<h1>Bubbles</h1>

<table>
  <thead>
    <tr>
      <th>Figure</th>
      <th>X</th>
      <th>Y</th>
      <th>Width</th>
      <th>Height</th>
      <th>Border width</th>
      <th>Border color</th>
      <th>Background color</th>
      <th>Shape</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bubbles.each do |bubble| %>
      <tr>
        <td><%= bubble.figure %></td>
        <td><%= bubble.x %></td>
        <td><%= bubble.y %></td>
        <td><%= bubble.width %></td>
        <td><%= bubble.height %></td>
        <td><%= bubble.border_width %></td>
        <td><%= bubble.border_color %></td>
        <td><%= bubble.background_color %></td>
        <td><%= bubble.shape %></td>
        <td><%= link_to 'Show', comic_bubble_path(@comic, bubble) %></td>
        <td><%= link_to 'Edit', edit_comic_bubble_path(@comic, bubble) %></td>
        <td><%= link_to 'Destroy', comic_bubble_path(@comic, bubble), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

