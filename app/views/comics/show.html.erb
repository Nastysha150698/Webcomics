<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @comic.name %>
</p>

<% Frame.all.each do |frame| %>
  <% frame_style = "position: absolute; top: " + frame.y.to_s + "px; left: " + frame.x.to_s + "px; width: " + frame.width.to_s + "px; height: " + frame.height.to_s + "px; border-width: " + frame.border_width.to_s + "px; border-color: " + frame.border_color + "; border-style: solid; background-color: " + frame.background_color + "; " %>
  <div style="<%= frame_style %>"></div>
<% end %>

<% Figure.all.each do |figure| %>
  <% figure_style = "position: absolute; top: " + figure.y.to_s + "px; left: " + figure.x.to_s + "px; width: " + figure.width.to_s + "px; height: " + figure.height.to_s + "px; background-color: " + figure.background_color + " ; border-width: " + figure.border_width.to_s + "px; border-color: " + figure.border_color + "; border-style: solid; " %>
  <div style="<%= figure_style %>"></div>
<% end %>

<% Bubble.all.each do |bubble| %>
  <% bubble_style = "position: absolute; top: " + bubble.y.to_s + "px; left: " + bubble.x.to_s + "px; width: " + bubble.width.to_s + "px; height: " + bubble.height.to_s + "px; background-color: " + bubble.background_color + " ; border-width: " + bubble.border_width.to_s + "px; border-color: " + bubble.border_color + "; border-style: solid; " %>
  <div style="<%= bubble_style %>"></div>
<% end %>

<% Image.all.each do |image| %>
  <% image_style = "position: absolute; top: " + image.y.to_s + "px; left: " + image.x.to_s + "px; width: " + image.width.to_s + "px; height: " + image.height.to_s + "px; " %>
  <div style="<%= image_style %>"></div>
<% end %>

<% ::Speech.all.each do |speech| %>
  <% speech_style = "position: absolute; top: " + speech.y.to_s + "px; left: " + speech.x.to_s + "px; width: " + speech.width.to_s + "px; height: " + speech.height.to_s + "px; font-color: " + speech.font_color + " ; font-size: " + speech.font_size.to_s + "px; font-family: " + speech.font_family + " ; font-style: " + speech.font_style + " ; background-color: " + speech.background_color + " ; " %>
  <div style="<%= speech_style %>">
    <font color = "<%= speech.font_color %>"><%= speech.speech %></font>
  </div>
<% end %>

<%= link_to 'Edit', edit_comic_path(@comic) %> |
<%= link_to 'Back', comics_path %>
