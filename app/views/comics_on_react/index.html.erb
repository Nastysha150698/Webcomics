<% @comic.figures.each do |figure| %>
  <%
    y = figure.y.to_s
    x = figure.x.to_s
    width = figure.width.to_s
    height = figure.height.to_s
    bg_color = figure.background_color
    border_width = figure.border_width.to_s
    border_radius = figure.border_radius.to_s
    border_color = figure.border_color
    z_index = figure.z_index.to_s

    position = "position: absolute;"
    top = "top: #{ y }px;" if y != ""
    left = "left: #{ x }px;" if x != ""
    width = "width: #{ width }px;" if width != ""
    height = "height: #{ height }px;" if height != ""
    background_color = "background-color: #{ bg_color };" if bg_color != ""
    border_width = "border-width: #{ border_width }px;" if border_width != ""
    border_radius = "border-radius: #{ border_radius }px;" if border_width != "" && border_radius != ""
    border_color = "border-color: #{ border_color };" if border_width != "" && border_color != ""
    border_style = "border-style: solid;" if border_width != ""
    z_index = "z-index: #{ z_index };" if z_index != ""

    style = [
      position, top, left, width, height,
      background_color, border_width, border_radius, border_color, border_style, z_index
    ].join(" ")
  %>

  <%= content_tag :div, class: 'figure', style: style do %>
    <%= figure.id.to_s %>
    <%= link_to "Edit", edit_comic_figure_path(@comic, figure), class: 'editButton' %>
    <%= link_to 'Destroy', comic_figure_path(@comic, figure), method: :delete, data: { confirm: 'Are you sure?' }, class: 'editButton' %>
  <% end %>
<% end %>
