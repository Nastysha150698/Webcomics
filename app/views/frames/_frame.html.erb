<%
  y = frame.y.to_s
  x = frame.x.to_s
  width = frame.width.to_s
  height = frame.height.to_s
  bg_color = frame.background_color
  border_width = frame.border_width.to_s
  border_color = frame.border_color

  position = "position: absolute;"
  top = "top: #{ y }px;" if y != ""
  left = "left: #{ x }px;" if x != ""
  width = "width: #{ width }px;" if width != ""
  height = "height: #{ height }px;" if height != ""
  background_color = "background-color: #{ bg_color };" if bg_color != ""
  border_width = "border-width: #{ border_width }px;" if border_width != ""
  border_color = "border-color: #{ border_color };" if border_width != "" && border_color != ""
  border_style = "border-style: solid;" if border_width != ""

  style = [
    position, top, left, width, height,
    background_color, border_width, border_color, border_style
  ].join(" ")
%>

<%= content_tag :div, class: 'frame', style: style do %>
  <%= link_to "Edit", edit_comic_frame_path(@comic, frame), class: 'editButton' %>
  <%#= render @comic.figures.all %>
  <% @comic.figures.each do |f| %>
    <% if f.frame_id.present? %>
      <%= render f %>
    <% end %>
  <% end %>

  <%#= render @comic.images.all %>
  <% @comic.images.each do |i| %>
    <% if i.frame_id.present? %>
      <%= render i %>
    <% end %>
  <% end %>

  <%#= render @comic.speeches.all %>
  <% @comic.speeches.each do |s| %>
    <% if s.frame_id.present? %>
      <%= render s %>
    <% end %>
  <% end %>
<% end %>
