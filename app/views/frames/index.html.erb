<p id="notice"><%= notice %></p>

<h1>Frames</h1>

<table>
  <thead>
    <tr>
      <th>Frame</th>
      <th>X</th>
      <th>Y</th>
      <th>Width</th>
      <th>Height</th>
      <th>Border width</th>
      <th>Border color</th>
      <th>Background color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frames.each do |frame| %>
      <tr>
        <td><%= frame.frame %></td>
        <td><%= frame.x %></td>
        <td><%= frame.y %></td>
        <td><%= frame.width %></td>
        <td><%= frame.height %></td>
        <td><%= frame.border_width %></td>
        <td><%= frame.border_color %></td>
        <td><%= frame.background_color %></td>
        <td><%#= link_to 'Show', comic_frame_path(@comic, frame) %></td>
        <td><%#= link_to 'Edit', edit_comic_frame_path(@comic, frame) %></td>
        <td><%#= link_to 'Destroy', comic_frame_path(@comic, frame), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

