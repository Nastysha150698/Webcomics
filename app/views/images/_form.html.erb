<%= form_with(model: [@comic, @image]) do |form| %>
  <% if @image.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this artwork from being saved:</h2>

      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :x %>
    <%= form.number_field :x%>
  </div>

  <div class="field">
    <%= form.label :y %>
    <%= form.number_field :y%>
  </div>

  <div class="field">
    <%= form.label :width %>
    <%= form.number_field :width%>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height%>
  </div>

  <div class="field">
    <%= form.label :layer %>
    <%= form.number_field :z_index, in: 1..(@comic.figures.count + @comic.speeches.count + @comic.images.count) %>
    max value: <%= @comic.figures.count + @comic.speeches.count + @comic.images.count %>
  </div>

  <div class="field">
    <%= form.label :rotate %>
    <%= form.number_field :rotate %>
  </div>

  <div class="field">
    <%= form.label :opacity %>
    <%= form.number_field :opacity %>
  </div>

  <div class="field">
    <%= form.label :layer %>
    <%= form.text_field :z_index %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
