<%
  y = image.y.to_s
  x = image.x.to_s
  width = image.width.to_s
  height = image.height.to_s
  bg_image = image.image.url
  z_index = image.z_index.to_s

  position = "position: absolute;"
  top = "top: #{ y }px;" if y != ""
  left = "left: #{ x }px;" if x != ""
  width = "width: #{ width }px;" if width != ""
  height = "height: #{ height }px;" if height != ""
  bg_image = "background-image: url(#{ bg_image });"
  bg_size = "background-size: cover;"
  z_index = "z-index: #{ z_index };" if z_index != ""


  style = [
    position, top, left, width, height, bg_image, bg_size, z_index
  ].join(" ")
%>

<%= content_tag :div, class: 'image', style: style do %>
  <%= link_to "Edit", edit_comic_image_path(@comic, image), class: 'editButton' %>
  <%= link_to 'Destroy', comic_image_path(@comic, image), method: :delete, data: { confirm: 'Are you sure?' }, class: 'editButton' %>
<% end %>
