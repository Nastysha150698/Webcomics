<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>X</th>
      <th>Y</th>
      <th>Width</th>
      <th>Height</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.image %></td>
        <td><%= image.x %></td>
        <td><%= image.y %></td>
        <td><%= image.width %></td>
        <td><%= image.height %></td>
        <td><%#= link_to 'Show', comic_image_path(@comic, image) %></td>
        <td><%#= link_to 'Edit', edit_comic_image_path(@comic, image) %></td>
        <td><%#= link_to 'Destroy', comic_image_path(@comic, image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

