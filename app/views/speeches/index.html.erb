<p id="notice"><%= notice %></p>

<h1>Speeches</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>X</th>
      <th>Y</th>
      <th>Width</th>
      <th>Height</th>
      <th>Font family</th>
      <th>Font size</th>
      <th>Font style</th>
      <th>Font color</th>
      <th>Background color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speeches.each do |speech| %>
      <tr>
        <td><%= speech.text %></td>
        <td><%= speech.x %></td>
        <td><%= speech.y %></td>
        <td><%= speech.width %></td>
        <td><%= speech.height %></td>
        <td><%= speech.font_family %></td>
        <td><%= speech.font_size %></td>
        <td><%= speech.font_style %></td>
        <td><%= speech.font_color %></td>
        <td><%= speech.background_color %></td>
        <td><%= link_to 'Show', comic_speech_path(@comic, speech) %></td>
        <td><%= link_to 'Edit', edit_comic_speech_path(@comic, speech) %></td>
        <td><%= link_to 'Destroy', comic_speech_path(@comic, speech), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

