<%= form_with(model: text, local: true) do |form| %>
  <% if text.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(text.errors.count, "error") %> prohibited this text from being saved:</h2>

      <ul>
      <% text.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_field :text %>
  </div>

  <div class="field">
    <%= form.label :x %>
    <%= form.number_field :x %>
  </div>

  <div class="field">
    <%= form.label :y %>
    <%= form.number_field :y %>
  </div>

  <div class="field">
    <%= form.label :width %>
    <%= form.number_field :width %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>

  <div class="field">
    <%= form.label :font_family %>
    <%= form.text_field :font_family %>
    <%#= select("text", "font_family", Text.all.collect {|t| [ t.name, t.family ] }, { include_blank: true }) %>
  </div>

  <div class="field">
    <%= form.label :font_size %>
    <%= form.number_field :font_size %>
  </div>

  <div class="field">
    <%= form.label :font_style %>
    <%= form.text_field :font_style %>
  </div>

  <div class="field">
    <%= form.label :font_color %>
    <%= form.text_field :font_color %>
  </div>

  <div class="field">
    <%= form.label :background_color %>
    <%= form.text_field :background_color %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
